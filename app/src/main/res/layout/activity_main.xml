<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient"
    tools:context=".MainActivity">

    <!-- Animated Background Elements -->
    <ImageView
        android:id="@+id/bgDecoration1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/circle_bg"
        android:alpha="0.1"
        android:rotation="45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/bgDecoration2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/circle_bg"
        android:alpha="0.15"
        android:rotation="-30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Main Content Container -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintWidth_percent="0.9">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp">

            <!-- App Icon/Image -->
            <ImageView
                android:id="@+id/splashImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/plant1"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp" />

            <!-- App Name -->
            <TextView
                android:id="@+id/splashText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Root"
                android:textSize="42sp"
                android:textColor="@color/green_primary"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintTop_toBottomOf="@+id/splashImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="24dp" />

            <!-- Tagline -->
            <TextView
                android:id="@+id/taglineText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Grow Your Digital Garden"
                android:textSize="16sp"
                android:textColor="@color/green_dark"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@+id/splashText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <!-- Start Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/startButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:text="Get Started"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                app:icon="@drawable/baseline_arrow_forward_24"
                app:iconGravity="textEnd"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/green_primary"
                app:elevation="8dp"
                app:rippleColor="@color/green_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp" />

            <!-- Loading indicator (initially hidden) -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/green_primary"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/taglineText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Footer Text -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cultivating connections since 2024"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:alpha="0.8"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>